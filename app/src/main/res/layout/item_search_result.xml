<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/searchResultRootView"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/cardview_large_margin"
        android:layout_weight="6">

        <!-- Quest title -->
        <TextView
            android:id="@+id/searchResultQuestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_demi"
            android:ellipsize="end"
            android:text="What is the meaning to life, the universe and everything else?"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"
            android:textSize="@dimen/font_size_default" />

        <!-- Quest description -->
        <TextView
            android:id="@+id/searchResultQuestDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_small_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="What is the meaning to life, the universe and everything else? Why do we live?"
            android:gravity="center|start"
            android:alpha="0.55"
            android:theme="@style/QuestDescriptionTextStyle"/>

        <!-- Publish date -->
        <TextView
            android:id="@+id/searchResultQuestPublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 November 2017"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/cardview_small_margin"
            android:theme="@style/SecondaryInformationTheme"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:alpha="0.33"
        android:background="@color/colorDisabledText"/>

</LinearLayout>