<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyleDark" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="BottomBarTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:textColor">@color/colorDisabledText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WhiteTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorDisabledText</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
    </style>

    <style name="WhiteEditTextTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/colorDisabledText</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
    </style>

    <style name="PrimaryTextViewStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/colorDisabledText</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
    </style>

    <style name="PrimaryButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:colorControlNormal">@color/colorDisabledText</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
        <item name="android:background">@drawable/btn_primary_background</item>
    </style>

    <style name="SecondaryButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/colorPrimaryText</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/default_medium_margin</item>
        <item name="android:paddingEnd">@dimen/default_medium_margin</item>
    </style>

    <style name="BottomButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_bottom_height</item>
        <item name="android:colorControlNormal">@color/colorDisabledText</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="QuestTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="QuestDescriptionTextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondaryInformationTheme">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="UnderlinedTextTheme" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SettingHeaderTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SettingPrimaryInfoTextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingSecondaryInfoTextStyle">
        <item name="android:textColor">@color/colorDisabledText</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
